<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReviewActivityFragment"
    tools:showIn="@layout/activity_review">

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextView"
        android:layout_width="300dp"
        android:layout_height="119dp"
        android:layout_marginStart="45dp"
        android:text="Enter Review"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/planets_spinner" />

    <Spinner
        android:id="@+id/planets_spinner"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/floor_spinner"
        android:layout_width="77dp"
        android:layout_height="41dp"
        android:layout_marginStart="300dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="391dp"
        android:layout_height="469dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-3dp"
        tools:layout_editor_absoluteY="93dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="212dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/smellField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Smell"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="271dp" />

            <RatingBar
                android:id="@+id/smellRating"
                style="@style/Widget.AppCompat.RatingBar.Indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="false"
                android:stepSize="1"
                tools:layout_editor_absoluteX="102dp"
                tools:layout_editor_absoluteY="332dp" />

        </LinearLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RatingBar
                android:id="@+id/cleanRating"
                style="@style/Widget.AppCompat.RatingBar.Indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="116dp"
                android:isIndicator="false"
                android:stepSize="1"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="0dp" />

            <RatingBar
                android:id="@+id/quietRating"
                style="@style/Widget.AppCompat.RatingBar.Indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:isIndicator="false"
                android:stepSize="1"
                app:layout_constraintStart_toEndOf="@+id/textView13"
                app:layout_constraintTop_toBottomOf="@+id/cleanRating" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="81dp"
                android:layout_marginTop="4dp"
                android:text="Clean"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="84dp"
                android:layout_marginTop="28dp"
                android:text="Quiet"
                app:layout_constraintEnd_toStartOf="@+id/quietRating"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView12" />

            <Button
                android:id="@+id/handicapButton"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginStart="81dp"
                android:layout_marginTop="12dp"
                android:text="&#9855;"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/quietRating" />

            <Button
                android:id="@+id/plyButton"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="12dp"
                android:text="1 ply"
                app:layout_constraintStart_toEndOf="@+id/handicapButton"
                app:layout_constraintTop_toBottomOf="@+id/quietRating" />

            <Button
                android:id="@+id/genderButton"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginStart="21dp"
                android:layout_marginTop="12dp"
                android:text="ðŸšº"
                app:layout_constraintStart_toEndOf="@+id/plyButton"
                app:layout_constraintTop_toBottomOf="@+id/quietRating" />

        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/sendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:src="@android:drawable/ic_dialog_email"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/floor_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="231dp"
        android:text="Floor"
        app:layout_constraintBottom_toTopOf="@+id/floor_spinner"
        app:layout_constraintStart_toEndOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="7dp"
        android:text="Building"
        app:layout_constraintBottom_toTopOf="@+id/planets_spinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>